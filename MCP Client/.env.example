# Snowflake MCP Server Configuration
# Copy this file to .env and fill in your values

# MCP Server URL - Your Snowflake MCP server endpoint
# Format: https://{account}.snowflakecomputing.com/api/v2/databases/{db}/schemas/{schema}/mcp-servers/{server-name}
MCP_SERVER_URL=https://your-account.snowflakecomputing.com/api/v2/databases/YOUR_DB/schemas/YOUR_SCHEMA/mcp-servers/YOUR_SERVER

# MCP Authentication Token - Personal Access Token (PAT) or Bearer token
# You can generate this in Snowflake using: SELECT SYSTEM$GENERATE_BEARER_TOKEN_PKCE()
MCP_AUTH_TOKEN=your_bearer_token_here

# Flask Secret Key (optional - will auto-generate if not provided)
# Generate a secure key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-in-production-to-a-random-secret-key
